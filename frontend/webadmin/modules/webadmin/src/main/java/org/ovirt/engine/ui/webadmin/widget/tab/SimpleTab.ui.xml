<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="org.ovirt.engine.ui.webadmin.widget.tab.AbstractTab.Style">
		.tab {
			height: 28px;			
			min-width: 80px;
			text-align: center;
			overflow: visible;
			font-family: Arial,sans-serif;
			line-height: 30px;
		}

		.left {
			float: left;
			width: 5px;
			height: 28px;
		}

		.activeLeft {
			background-image: url(images/tab_left_selected.png);
		}

		.inactiveLeft {
			background-image: url(images/main_tab_left.png);
		}

		.right {
			float: right;
			width: 5px;
			height: 28px;
		}

		.activeRight {
			background-image: url(images/tab_right_selected.png);
		}

		.inactiveRight {
			background-image: url(images/main_tab_right.png);
		}

		.middle {
			background-repeat: repeat-x;
			height: 28px;			
			margin-left: 5px;
			margin-right: 5px;
			padding-left: 5px;
			padding-right: 5px;
		}

		.activeMiddle {
			background-image: url(images/tab_middle_selected.png);
			font-size: 12.5px;
		}

		.inactiveMiddle {
			background-image: url(images/main_tab_middle.png);
		}

		a.middleLink {
			font-size: 12.5px;
			font-weight: bold;
			font-family: Arial,sans-serif;
		}

		a.activeMiddleLink {
			color: #3f5674;
		}

		a.inactiveMiddleLink {
			color: #666666;
		}

		a.inactiveMiddleLink:hover {
			color: #3f5674;
		}

		.arrow {
			background-image: url(images/tab_arrow_selected.png);
			background-repeat: no-repeat;
			background-position: center;
			width: 100%;
			height: 7px;
			text-align: center;
		}

		.activeArrow {
			display: block;
		}

		.inactiveArrow {
			display: none;
		}
		
		.alignLeft {
			float: left;
		}
		
		.alignRight {
			float: right;
		}
	</ui:style>

	<g:HTMLPanel ui:field="tabContainer" addStyleNames="{style.tab} {style.alignLeft}">
		<div ui:field="leftElement" class="{style.left} {style.inactiveLeft}" />
		<div ui:field="rightElement" class="{style.right} {style.inactiveRight}" />
		<div ui:field="middleElement" class="{style.middle} {style.inactiveMiddle}">
			<g:InlineHyperlink ui:field="hyperlink" addStyleNames="{style.middleLink} {style.inactiveMiddleLink}"/>
		</div>
		<div ui:field="arrowElement" class="{style.arrow} {style.inactiveArrow}" />
		<div style="clear: both;" />
	</g:HTMLPanel>

</ui:UiBinder>
