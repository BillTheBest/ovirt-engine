<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.ovirt.engine.ui.webadmin.widget">

	<ui:style>
		.actionPanel {
			padding-top: 5px;
		}
	</ui:style>

	<g:VerticalPanel ui:field="container" width="100%">
		<w:SimpleActionPanel ui:field="actionPanel" addStyleNames="{style.actionPanel}" />
		<g:Widget ui:field="dataDisplayWidget" />
	</g:VerticalPanel>

</ui:UiBinder>
