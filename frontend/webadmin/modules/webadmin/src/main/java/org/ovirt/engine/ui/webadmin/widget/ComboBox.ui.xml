<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"  xmlns:e="urn:import:org.ovirt.engine.ui.webadmin.widget.editor">
	
	<ui:style type="org.ovirt.engine.ui.webadmin.widget.ComboBox.WidgetStyle">
		.listBoxEditor {
		}
		
		.listBoxLabel {
			margin-left: 30px;
		}
		
		.textBoxEditor {
			position: absolute;
			top: 0px;
			margin-top: 2px;
			margin-top: 1px\9;
			right: 18px;
			right: 20px\9;
		}
		
		.textBoxWidget {
			width: 180px;
			width: 178px\9;			
		}
		
		.textBoxInput {
			border-width: 0px !important;
			font-size: 13px;
		}
		
		.selectBoxInput {
			height: 23px !important;
		}
		
		.textBoxLabel {
			display: none;
		}
	</ui:style>

	<g:AbsolutePanel>
		<e:ListModelListBoxEditor ui:field="listBoxEditor" addStyleNames="{style.listBoxEditor}" />
		<e:EntityModelTextBoxEditor ui:field="textBoxEditor" addStyleNames="{style.textBoxEditor}" />				
	</g:AbsolutePanel>

</ui:UiBinder>
