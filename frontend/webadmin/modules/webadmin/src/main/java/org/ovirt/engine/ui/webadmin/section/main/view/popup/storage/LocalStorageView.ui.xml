<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:org.ovirt.engine.ui.webadmin.widget.dialog"
	xmlns:e="urn:import:org.ovirt.engine.ui.webadmin.widget.editor">

	<ui:style
		type="org.ovirt.engine.ui.webadmin.section.main.view.popup.storage.LocalStorageView.WidgetStyle">
			.content {
				
			}
			
			.localPathEditor {
				width: 100%;
			}
			
			.localPathContentWidget {
				width: 458px;
			}
			
			.errorMessageLabel {
				color: #CD2127;
				margin-top: 20px;
				margin-left: 5px;
			}
		</ui:style>

	<g:FlowPanel addStyleNames="{style.content}">
		<e:EntityModelTextBoxEditor ui:field="localPathEditor"
			addStyleNames="{style.localPathEditor}" />
		<g:Label ui:field="message" addStyleNames="{style.errorMessageLabel}" />
	</g:FlowPanel>

</ui:UiBinder>
