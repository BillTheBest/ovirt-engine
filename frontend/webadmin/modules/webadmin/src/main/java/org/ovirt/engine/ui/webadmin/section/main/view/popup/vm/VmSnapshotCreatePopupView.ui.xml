<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.ovirt.engine.ui.webadmin.widget.dialog" xmlns:e="urn:import:org.ovirt.engine.ui.webadmin.widget.editor">

	<ui:style>
		.content {
		}		
		
		.descriptionEditor {
			width: 100%;
		}
		
		.errorMessageLabel {
			color: #CD2127;
			margin-top: 10px;
			margin-left: 5px;
		}
		
	</ui:style>
	
	<d:SimpleDialogPanel width="410px" height="200px">
		<d:content>
			<g:VerticalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="{style.content}">
				<e:EntityModelTextBoxEditor ui:field="descriptionEditor" addStyleNames="{style.descriptionEditor}" />				
				<g:Label ui:field="message" addStyleNames="{style.errorMessageLabel}" />			
			</g:VerticalPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>
